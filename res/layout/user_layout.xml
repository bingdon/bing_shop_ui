<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/usertitlelayout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/navbar_bg" >

        <ImageView
            android:id="@+id/shoucangima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/user_collect" />

        <TextView
            android:id="@+id/username_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/username"
            android:text="Mai.k" />

        <RelativeLayout
            android:id="@+id/user_my_re_address_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/usearchat"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/user_my_re_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:text="@string/myaddress"
                android:textSize="20sp" />

        </RelativeLayout>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/shoucangima"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="28dp"
            android:layout_toRightOf="@+id/shoucangima"
            android:text="我的"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/usearchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/shoucangima"
            android:layout_marginRight="19dp"
            android:src="@drawable/user_chat" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/user_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="117dp"
        android:src="@drawable/user_head" />

    <TextView
        android:id="@+id/user_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/usertitlelayout"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="11dp"
        android:layout_toRightOf="@+id/user_head"
        android:text="Level:22" />

    <RelativeLayout
        android:id="@+id/user_cen_layout"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/user_head"
        android:layout_marginTop="15dp" >

        <ImageView
            android:id="@+id/user_all_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="25dp"
            android:src="@drawable/user_all_orders" />

        <ImageView
            android:id="@+id/user_cline0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="35dp"
            android:layout_toRightOf="@+id/user_all_order"
            android:src="@drawable/home_line" />

        <ImageView
            android:id="@+id/user_wait_sended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/user_wait_pay"
            android:layout_marginRight="24dp"
            android:src="@drawable/user_wait_sended" />

        <ImageView
            android:id="@+id/user_cline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="35dp"
            android:layout_toLeftOf="@+id/user_wait_sended"
            android:src="@drawable/home_line" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/user_all_order_txt"
            android:layout_alignBottom="@+id/user_all_order_txt"
            android:layout_alignLeft="@+id/user_wait_goods"
            android:layout_marginLeft="5dp"
            android:text="@string/wait_re_go"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignLeft="@+id/user_wait_pay"
            android:layout_marginLeft="5dp"
            android:text="@string/wait_pay"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/user_all_order_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/user_all_order"
            android:layout_below="@+id/user_all_order"
            android:layout_marginTop="5dp"
            android:text="@string/all_order"
            android:textSize="9sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView7"
            android:layout_alignBottom="@+id/textView7"
            android:layout_alignLeft="@+id/user_wait_sended"
            android:layout_marginLeft="5dp"
            android:text="@string/wait_sened"
            android:textSize="9sp" />

        <ImageView
            android:id="@+id/user_cline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/home_line" />

        <ImageView
            android:id="@+id/user_wait_goods"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_wait_pay"
            android:layout_marginRight="30dp"
            android:layout_toLeftOf="@+id/user_cline1"
            android:src="@drawable/user_wait_goods" />

        <ImageView
            android:id="@+id/user_wait_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView7"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/user_cline1"
            android:src="@drawable/user_wait_pay" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/userinfolayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/user_cen_layout"
        android:layout_marginLeft="25dp" >

        <RelativeLayout
            android:id="@+id/wait_evaluate_layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/wait_evaluate_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="等待评价" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/cargoodsline" />

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/imageView5"
                android:layout_alignTop="@+id/textView9"
                android:layout_centerVertical="true"
                android:src="@drawable/user_mor" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/back_pay_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/wait_evaluate_layout" >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="退款" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="false"
                android:src="@drawable/cargoodsline" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_alignRight="@+id/imageView7"
                android:layout_centerHorizontal="false"
                android:layout_centerVertical="true"
                android:src="@drawable/user_mor" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/pay_bao_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/back_pay_layout" >

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="支付宝" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/cargoodsline" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView11"
                android:layout_alignRight="@+id/imageView9"
                android:src="@drawable/user_mor" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/coomera_foucs_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/pay_bao_layout" >

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="店铺关注" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/cargoodsline" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/imageView11"
                android:layout_centerVertical="true"
                android:src="@drawable/user_mor" />
        </RelativeLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/user_tag_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/user_level"
        android:layout_alignBottom="@+id/user_level"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/user_level"
        android:background="@drawable/user_daren"
        android:text="购物达人"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>
