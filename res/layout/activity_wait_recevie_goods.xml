<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaitRecevieGoods" >

    <RelativeLayout
        android:id="@+id/wait_receive_goods_titile_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/navbar_bg" >

        <ImageView
            android:id="@+id/wait_re_go_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:src="@drawable/return_icon" />

        <TextView
            android:id="@+id/wait_re_go_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/wait_re_go_back"
            android:layout_marginLeft="24dp"
            android:layout_toRightOf="@+id/wait_re_go_back"
            android:text="@string/wait_re_go" />

    </RelativeLayout>

    <ListView
        android:id="@+id/wait_re_go_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/wait_receive_goods_titile_layout" >
    </ListView>

</RelativeLayout>
