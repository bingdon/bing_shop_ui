<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAllOrder" >

    <RelativeLayout
        android:id="@+id/my_all_ord_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/navbar_bg" >

        <ImageView
            android:id="@+id/my_all_ord_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:src="@drawable/return_icon" />

        <TextView
            android:id="@+id/my_all_odr_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/my_all_ord_back"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/my_all_ord_back"
            android:text="@string/allorder" />

    </RelativeLayout>

    <ListView
        android:id="@+id/my_all_ord_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/my_all_ord_title_layout" >
    </ListView>

</RelativeLayout>
