<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatActivity" >

    <RelativeLayout
        android:id="@+id/chat_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/navbar_bg" >

        <ImageView
            android:id="@+id/chat_title_back_ima"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/return_icon" />

        <TextView
            android:id="@+id/chat_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/chat_title_back_ima"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/chat_title_back_ima"
            android:text="TextView"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/chat_title_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/chat_title_txt"
            android:layout_marginRight="15dp"
            android:src="@drawable/cargoodsedit" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/chat_bel_send_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" >

        <RelativeLayout
            android:id="@+id/chat_option_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/chat_option_ima" >

        </RelativeLayout>

        <Button
            android:id="@+id/send_button"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/send"
            android:text="@string/send" />

        <EditText
            android:id="@+id/chat_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/send_button"
            android:layout_toRightOf="@+id/chat_option_layout"
            android:background="@drawable/input_box"
            android:ems="10"
            android:hint="@string/chatedit" />

    </RelativeLayout>

    <ListView
        android:id="@+id/chat_listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:cacheColorHint="@null"
        android:listSelector="#00000000"
        android:layout_above="@+id/chat_bel_send_layout"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/chat_title_layout" >

    </ListView>

</RelativeLayout>
